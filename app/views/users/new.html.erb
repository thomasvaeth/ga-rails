<div id="navigation">
  <%= render 'partials/nav' %>
  <div id="user">
    <% if @current_user %>
      <a href="/signout"><li class="btn btn-lg btn-default">Sign Out</li></a>
    <% else %>
      <a href="/signin"><li class="btn btn-lg btn-default">Sign In</li></a>
    <% end %>
  </div>
</div>

<div id="fullpage-four">
  <div class="section section-7">
    <%= render 'partials/flash' %>
    <p class="title">Sign Up</p>
    <div class="col-xs-10 col-sm-4 col-md-4 col-lg-4 col-xs-offset-1 col-sm-offset-4 col-md-offset-4 col-lg-offset-4">
      <%= bootstrap_form_for :user do |user| %>
        <div class="row">
          <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <%= user.text_field :firstname, :label => 'First Name', :placeholder => 'First', class: "form-control input" %>
          </div>
          <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
          <%= user.text_field :lastname, :label => 'Last Name', :placeholder => 'Last', class: "form-control" %>
          </div>
        </div>
        <%= user.text_field :email, :label => 'Email address', :placeholder => 'Email', class: "form-control" %>
        <%= user.password_field :password, :label => 'Create a password', :placeholder => 'Password (8 character minimum)', class: "form-control" %>
        <%= user.password_field :password_confirmation, :hide_label => true, :placeholder => 'Confirm Password', class: "form-control" %>
        <div class="row">
          <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <%= user.text_field :ubercode, :label => 'Uber Promo', :placeholder => 'Code (Optional)', class: "form-control" %>
          </div>
          <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <%= user.text_field :lyftcode, :label => 'Lyft Promo', :placeholder => 'Code (Optional)', class: "form-control" %>
          </div>
        </div>

        <%= user.submit 'Sign Up', class: "btn btn-lg btn-default" %>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript" src="/fullpage-signup.js"></script>